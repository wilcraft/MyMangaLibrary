@model MyMangaLibrary.Models.Characters

@{
    ViewData["Title"] = "Details";
}
<div>
    <h4>
        @Html.DisplayFor(model => model.Name)
    </h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            Manga
        </dt>
        <dd class = "col-sm-10">
            @Html.ActionLink(@Model.MangaName.Name, "Details", "Mangas", new { id = @Model.MangaID})
