@model MyMangaLibrary.Models.Manga

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>
    @Html.DisplayFor(model => model.Name)
</h4>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="Rating" class="control-label"></label>
                <input asp-for="Rating" class="form-control" />
                <span asp-validation-for="Rating" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ChapterCount" class="control-label"></label>
                <input asp-for="ChapterCount" class="form-control" />
                <span asp-validation-for="ChapterCount" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Summary" class="form-label mt-4"></label>
                <textarea class="form-control" asp-for="Summary" id="exampleTextarea" rows="3"></textarea>
                <span asp-validation-for="Summary" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-primary btn-sm" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
